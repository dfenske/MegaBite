@model IEnumerable<MegaBite.Domain.Model.Recipe>

@{
    ViewBag.Title = "Recipes";
}

<h2>All Recipes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Time it takes to make
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serves)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageRating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Images.Any())
                {
                    <a href='@Url.Action("Details", "Recipe", new { id = item.Id })'>
                        <img src='@Url.Content(item.Images.First().ToString())' class="img-thumbnail small" />
                    </a>
                }
            </td>
            <td class="lead">
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeToMakeInMinutes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serves)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                @if (item.AverageRating != null)
                {
                    @Html.DisplayFor(modelItem => item.AverageRating)
                } else
                {
                    @Html.Display("No ratings yet")
                }
            </td>

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
